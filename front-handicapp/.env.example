# HandicApp Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Configuration (Backend URL)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api/v1

# Request Configuration
NEXT_PUBLIC_REQUEST_TIMEOUT_MS=30000
NEXT_PUBLIC_REQUEST_MAX_RETRIES=3

# Application Environment
NEXT_PUBLIC_APP_ENV=development

# Development settings
NEXT_PUBLIC_ENABLE_DEBUG=false

# For production, change to your actual backend URL:
# NEXT_PUBLIC_API_BASE_URL=https://api.handicapp.com/v1